@{
    ViewData["Title"] = "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Gifting For Good</title>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/YOUR-FONT-AWESOME-CODE.js" crossorigin="anonymous"></script>
</head>
<body>

    <!-- Sidebar Navigation -->
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="logo">GFG Admin</div>
        <nav>
            <ul>
                <li>
                    <button class="sidebar-btn" onclick="window.location.href='@Url.Action("Index", "Admin")'">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </button>
                </li>
                <li>
                    <button class="sidebar-btn" onclick="window.location.href='@Url.Action("Users", "Admin")'">
                        <i class="fas fa-users"></i> Users
                    </button>
                </li>
                <li>
                    <button class="sidebar-btn" onclick="window.location.href='@Url.Action("Donations", "Admin")'">
                        <i class="fas fa-hand-holding-heart"></i> Donations
                    </button>
                </li>
                <li>
                    <button class="sidebar-btn" onclick="window.location.href='@Url.Action("Notices", "Admin")'">
                        <i class="fas fa-bullhorn"></i> Notices
                    </button>
                </li>
                <li>
                    <button class="sidebar-btn" onclick="window.location.href='@Url.Action("Volunteers", "Admin")'">
                        <i class="fas fa-user-shield"></i> Volunteers
                    </button>
                </li>
                <li>
                    <button class="sidebar-btn" onclick="window.location.href='@Url.Action("Logout", "Admin")'">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </li>
            </ul>
        </nav>
    </aside>


    <!-- Main Content -->
    <main class="content">
        <header class="admin-header">
            <h2>Admin Dashboard</h2>
            <button class="dark-mode-toggle" onclick="toggleDarkMode()">🌙</button>
        </header>

        <!-- Dashboard Overview -->
        <section class="dashboard-grid">
            <div class="dashboard-item">
                <h3>Users</h3>
                <p>150</p>
            </div>
            <div class="dashboard-item">
                <h3>Pending Donations</h3>
                <p>45</p>
            </div>
            <div class="dashboard-item">
                <h3>Active Volunteers</h3>
                <p>30</p>
            </div>
            <div class="dashboard-item">
                <h3>Notices</h3>
                <p>5</p>
            </div>
        </section>
    </main>

    <script>
        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
        }
    </script>

</body>
</html>
